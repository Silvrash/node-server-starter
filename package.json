{
	"name": "node-server-starter",
	"version": "1.0.0",
	"description": "starter template for nodeJS backend",
	"main": "index.js",
	"scripts": {
		"deploy": "npm run compile && gcloud app deploy dist/app.yaml --project=sample --version=1 -q",
		"compile": "rimraf dist && tsc && tspath -f && cp package.json app.yaml .env.prod dist && mv ./dist/.env.prod ./dist/.env",
		"build": "npm run compile",
		"dev": "NODE_ENV=development ts-node-dev --respawn -r tsconfig-paths/register src/index.ts",
		"start": "node src/index.js",
		"start:local": "node ./dist/src/index.js",
		"prod": "npm run build && npm run start:local",
		"test": "jest .",
		"lint:fix": "tslint --config tslint.json --fix --project ."
	},
	"author": "Benjamin Arko Afrasah",
	"license": "Apache-2.0",
	"engines": {
		"node": "10.x.x"
	},
	"devDependencies": {
		"@types/bcrypt": "^3.0.0",
		"@types/express": "^4.17.0",
		"@types/jest": "^24.0.14",
		"@types/jsonwebtoken": "^8.3.4",
		"@types/mysql2": "github:types/mysql2",
		"@types/node": "^12.7.11",
		"@types/ramda": "^0.26.26",
		"jest": "^24.8.0",
		"prettier": "^1.18.2",
		"rimraf": "^3.0.0",
		"ts-jest": "^24.0.2",
		"ts-node": "^8.2.0",
		"ts-node-dev": "^1.0.0-pre.40",
		"tsconfig-paths": "^3.9.0",
		"tslint": "^5.18.0",
		"tslint-config-prettier": "^1.18.0",
		"tslint-config-standard": "^8.0.1",
		"tspath": "^1.3.7",
		"typescript": "^3.5.2"
	},
	"dependencies": {
		"bcrypt": "^5.0.0",
		"body-parser": "^1.19.0",
		"boxen": "^4.1.0",
		"class-transformer": "^0.1.9",
		"class-validator": "^0.8.1",
		"cookie-parser": "^1.4.4",
		"cors": "^2.8.5",
		"dotenv": "^6.2.0",
		"express": "^4.17.1",
		"firebase-admin": "^8.6.0",
		"jsonwebtoken": "^8.5.1",
		"mysql2": "^1.6.5",
		"pino": "^5.13.4",
		"pino-pretty": "^3.2.1",
		"ramda": "^0.26.1",
		"reflect-metadata": "^0.1.13",
		"routing-controllers": "^0.7.7",
		"typeorm": "0.2.18",
		"uuid": "^3.3.3"
	},
	"repository": "https://github.com/Silvrash/node-server-starter.git"
}
